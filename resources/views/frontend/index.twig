{% extends 'frontend/layouts/default.twig' %}

{% block carousel %}
    {{ parent() }}
    {% include 'frontend/partials/_carousel.twig' %}
{% endblock %}

{% block content %}
    <div class="heading-title">
        <h2>{{ Lang.get('frontend/index.random_comics') }}</h2>
    </div>

    <div class="index">
        {% set i = 0 %}
        {% set shouldOpen = 1 %}

        {% for comic in comics %}
            {% set i = i+1 %}

            {% if shouldOpen == 1 %}
                {% set shouldOpen = 0 %}
                <div class="row">
            {% endif %}

            <div class="col-lg-3 col-sm-6">
                <div class="thumbnail">
                    <a href="{{ URL.route('frontend.series.show', {'id': comic['id']}) }}" class="details-btn">
                        <div class="caption-img"
                             style="background: url({{ comic['thumbnail']['path'] }}/{{ Config.get('marvel.series.thumbnail') }});"></div>
                    </a>

                    <div class="caption-details">
                        <h3>{{ comic['title'] }}</h3>
                        {#<a href="{{ URL.route('frontend.series.show', {'id': comic['id']}) }}" class="details-btn">#}
                            {#Details#}
                        {#</a>#}
                    </div>
                </div>
            </div>

            {% if i is divisible by(4) or i == comics|length %}
                </div>
                {% set shouldOpen = 1 %}
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}


