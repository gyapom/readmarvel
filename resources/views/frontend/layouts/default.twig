<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ Lang.get('frontend/navbar.title') }}</title>

    {% block styles %}
        <link rel="stylesheet" href="{{ url('css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="{{ url('css/style.css') }}"/>
    {% endblock %}
</head>
<body>
<div id="wrapper">
    <div id="header">
        <h1>
            <a href="{{ URL.route('home') }}">{{ Lang.get('frontend/navbar.title') }}</a>
        </h1>
    </div>

    <div>
        {% include 'frontend/partials/_navbar.twig' %}
    </div>

    {% block content %}
    {% endblock %}
</div>

{% block scripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="application/javascript" src="{{ url('js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>